# Токен бота, полученный при создании бота в Пачке
PACHCA_TOKEN=your_bot_token_here

# Секрет для проверки подписи вебхуков (рекомендуется для безопасности)
PACHCA_WEBHOOK_SECRET=your_webhook_secret_here

# Тип приветственного сообщения (default, extended, short)
WELCOME_MESSAGE_TYPE=default

# Порт для запуска сервера (по умолчанию 3000)
PORT=3000

# Отключение проверки подписи вебхука (только для разработки)
# SKIP_SIGNATURE_VERIFICATION=true

# Отключение проверки IP-адреса отправителя (только для разработки)
# SKIP_IP_VERIFICATION=true

# Отключение проверки времени вебхука (только для разработки)
# SKIP_TIMESTAMP_VERIFICATION=true
